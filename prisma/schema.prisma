// This is your Prisma schema file,
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  name         String
  email        String @unique
  password     String
  access_level String
  position     String
}

model Part {
  id String @id @default(uuid())

  name  String
  price Float
}

model Client {
  id String @id @default(uuid())

  name         String
  email        String  @unique
  cnpj_cpf     String  @unique
  date_contact String
  fone         String?
  cell_phone   String
  company_name String

  createdAt String

  updatedAt DateTime @updatedAt

  equipments Equipment[]
  address    Address?
}

model Address {
  id String @id @default(uuid())

  number       Float
  cep          String
  neighborhood String
  city         String
  state        String

  clientId String @unique
  cleint   Client @relation(fields: [clientId], references: [id])
}

model Equipment {
  id String @id @default(uuid())

  name   String
  brand  String
  model  String
  defect String

  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  parts PartEquipment[]
}

model PartEquipment {
  id String @id @default(uuid())

  name        String
  price       Float
  labor_value Float
  quantit     Int

  equippmentId String
  equipment    Equipment @relation(fields: [equippmentId], references: [id])
}
