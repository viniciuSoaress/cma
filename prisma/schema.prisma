// This is your Prisma schema file,
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name         String
  email        String @unique
  password     String
  access_level String
  position     String
}

model Part {
  id String @id @default(uuid())

  name  String
}

model Client {
  id String @id @default(uuid())

  email        String  @unique
  cnpj_cpf     String  @unique
  date_contact String
  fone         String?
  cell_phone   String
  company_name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  equipments Equipment[]
  address    Address?
  budgets Budget[]
}

model Address {
  id String @id @default(uuid())

  number       Float
  cep          String
  neighborhood String
  city         String
  state        String

  clientId String @unique
  cleint   Client @relation(fields: [clientId], references: [id])
}

model Equipment {
  id String @id @default(uuid())

  name   String
  brand  String
  model  String
  defect String

  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  parts  PartEquipment[]
  budget Budget?
}

model PartEquipment {
  id String @id @default(uuid())

  name        String
  price       Float
  labor_value Float
  quantit     Int

  equippmentId String
  equipment    Equipment @relation(fields: [equippmentId], references: [id])
}

model Budget {
  id String @id @default(uuid())

  date_delivery String
  date_entry    String

  equipmentId String    @unique
  equipment   Equipment @relation(fields: [equipmentId], references: [id])


  client Client @relation(fields: [clientId], references: [id])
  clientId String
}
